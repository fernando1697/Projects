 * Use the following `while` loop to write out the song "99 bottles of juice".
 * Log the your lyrics to the console.
 *
 * Note
 *   - Each line of the lyrics needs to be logged to the same line.
 *   - The pluralization of the word "bottle" changes from "2 bottles" to "1 bottle" to "0 bottles".
 */

var num = 99;
while(num!==0){
    if(num!==0){
        num2 = num-1;
    var sing =  num + " bottles of juice on the wall! "+num +" bottles of juice! Take one down, pass it around... "+num2+" bottles of juice on the wall!";
    console.log(sing);}
    else if(num2===0){
        num2 = num-1;

     var sing =  num + " bottles of juice on the wall! "+num +" bottles of juice! Take one down, pass it around... "+num2+" bottle of juice on the wall!";
    
    console.log(sing);}
else if(num===1){
     var sing =  num + " bottle of juice on the wall! "+num +" bottles of juice! Take one down, pass it around... "+num2+" bottles of juice on the wall!";
    console.log(sing)
}        
    
    num = num -1;
}
